require 'gtk-3.0'

def tweet(tweeter, content):
  %GtkBox():
    %GtkBox.tweeter():
      %GtkLabel(label = tweeter.display_name)
      %GtkLabel(label = tweeter.name)
      %GtkImage(src = tweeter.av_url)

def feed(tweets):
  %GtkList#tweets():
    for tweet in tweets:
      tweet(tweet.tweeter, tweet.content)
